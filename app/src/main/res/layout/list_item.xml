<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/container_loop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_loop_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/loop_start_block" />

        <LinearLayout
            android:id="@+id/container_loop_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cnt_loop"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="回"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_move"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/back_move" />

        <LinearLayout
            android:id="@+id/item_frame"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/direction_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:scaleType="centerInside"
                android:src="@drawable/move_front" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_speed_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:lines="1"
                        android:text="50"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|bottom"
                        android:lines="1"
                        android:text="%"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="秒"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>